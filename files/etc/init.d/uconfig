#!/bin/sh /etc/rc.common

START=10
BOOT=0

start() {
	[ -L /etc/uconfig/configs/uconfig.active ] || /usr/libexec/uconfig/setup.uc

	mkdir -p /var/run/uci
	uconfig-apply -n /etc/uconfig/configs/uconfig.active
	[ $BOOT -eq 0 ] && reload_config
}

boot() {
	BOOT=1
	start
	/etc/init.d/system start
}

stop() {
	rm -rf /var/run/uci
	reload_config
}
