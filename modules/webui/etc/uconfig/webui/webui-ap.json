{
	"unit": {
		"hostname": "ap",
        	"leds-active": true
	},

	"interfaces": {
		"main": {
			"role": "upstream",
			"services": [ "mdns", "ssh", "uconfig-ui", "fingerprint" ],
			"ports": {
				"wan*": "auto",
				"lan*": "auto"
			},
			"ipv4": {
				"addressing": "dynamic"
			},
			"ipv6": {
				"addressing": "dynamic"
			},
			"ssids": {
				"main": {
					"ssid": "",
					"template": {
						"mode": "encrypted",
						"security": "maximum",
						"key": ""
					},
					"wifi-radios": [
						"2G", "5G"
					]
				},
				"mesh": {
					"disable": true,
					"template": {
						"mode": "batman-adv"
					},
					"wifi-radios": [
						"5G"
					]
				}
			}
		},
		"guest": {
			"role": "upstream",
			"disable": true,
			"services": [ "mdns", "fingerprint" ],
			"ports": {
				"wan*": "auto",
				"lan*": "auto"
			},
			"vlan": {
				"id": 100
			},
			"ipv4": {
				"addressing": "dynamic"
			},
			"ssids": {
				"guest": {
					"ssid": "Guest",
					"template": {
						"mode": "encrypted",
						"security": "maximum"
					},
					"wifi-radios": [
						"2G", "5G"
					],
					"isolate-clients": true,
					"rate-limit": 0
				}
			}
		}
	},

	"services": {
		"ssh": {
			"port": 22
		}
	}
}
