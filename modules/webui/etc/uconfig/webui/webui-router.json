{
	"unit": {
		"hostname": "router",
        	"leds-active": true
	},

	"interfaces": {
		"uplink": {
			"role": "upstream",
			"services": [ "ssh", "uconfig-ui" ],
			"vlan": {
				"trunks": [ 100 ]
			},
			"ports": {
				"wan*": "auto"
			},
			"ipv4": {
				"addressing": "dynamic"
			},
			"ipv6": {
				"addressing": "dynamic"
			}
		},
		"main": {
			"role": "downstream",
			"services": [ "mdns", "ssh", "uconfig-ui", "fingerprint" ],
			"ports": {
				"lan*": "auto"
			},
			"ipv4": {
				"addressing": "static",
				"subnet": "192.168.11.1/24",
				"dhcp-pool": {
					"lease-first": 10,
					"lease-count": 100,
					"lease-time": "6h"
				}
			},
			"ipv6": {
				"addressing": "static",
				"dhcpv6": {
					"mode": "hybrid"
				}
			},
			"ssids": {
				"main": {
					"ssid": "",
					"template": {
						"mode": "encrypted",
						"security": "maximum",
						"key": ""
					},
					"wifi-radios": [
						"2G", "5G"
					]
				},
				"mesh": {
					"disable": true,
					"template": {
						"mode": "batman-adv"
					},
					"wifi-radios": [
						"5G"
					]
				}
			}
		},
		"guest": {
			"role": "downstream",
			"disable": true,
			"services": [ "mdns", "fingerprint" ],
			"ports": {
				"lan*": "auto"
			},
			"vlan": {
				"id": 100
			},
			"ipv4": {
			"addressing": "static",
				"subnet": "192.168.100.1/24",
				"dhcp-pool": {
					"lease-first": 10,
					"lease-count": 100,
					"lease-time": "6h"
				}
			},
			"ssids": {
				"guest": {
					"ssid": "Guest",
					"template": {
						"mode": "encrypted",
						"security": "maximum"
					},
					"wifi-radios": [
						"2G", "5G"
					],
					"isolate-clients": true,
					"rate-limit": 0
				}
			}
		}
	},

	"services": {
		"ssh": {
			"port": 22
		}
	}
}
